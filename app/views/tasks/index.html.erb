<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<h2>Tasks in the Database</h2>
<%= form_with url: save_tasks_path, method: :patch do |form| %>
  <div id="tasks">
    <% @tasks.each do |task| %>
      <p>
        Task ID: <%= task.id %>
        Task body: <%= task.foo %>
        <%= form.check_box("tasks[]", {}, task.id, nil) %>
      </p>
    <% end %>
  </div>

  <%= form.submit "Save All" %>
<% end %>

<h3>Adding New Tasks</h3>
<section>
<%= link_to "New task", new_task_path %>
</section>

